{
  "name": "shopify-order-exporter",
  "author": {
    "name": "David Gilbert",
    "email": "david_gilbert64@yahoo.com"
  },
  "description": "Shopify app which allows shop owners to export CSV data, written in Next, Node, MongoDB and GraphQL",
  "main": "server/index.js",
  "scripts": {
    "tunnel": "ngrok http 8081",
    "test": "jest",
    "dev": "cross-env NODE_ENV=development nodemon server/index.js",
    "dev-debug": "cross-env NODE_ENV=development NODE_OPTIONS='--inspect' node server/index.js",
    "build": "next build",
    "start": "npm run build && NODE_ENV=production node server/index.js"
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "always",
    "printWidth": 110
  },
  "nodemonConfig": {
    "verbose": true,
    "ignore": [
      "node_modules",
      ".next"
    ],
    "watch": [
      "server/**/*"
    ],
    "ext": "js,json"
  },
  "dependencies": {
    "@apollo/client": "^3.3.21",
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.7",
    "@babel/register": "^7.14.5",
    "@koa/router": "^10.0.0",
    "@shopify/app-bridge": "^2.0.2",
    "@shopify/app-bridge-react": "^2.0.2",
    "@shopify/app-bridge-utils": "^2.0.2",
    "@shopify/koa-shopify-auth": "^4.1.3",
    "@shopify/koa-shopify-webhooks": "^3.0.0",
    "@shopify/polaris": "^6.3.0",
    "@shopify/shopify-api": "^1.4.1",
    "content-type": "^1.0.4",
    "core-js": "^3.15.1",
    "cross-env": "^7.0.3",
    "cryptr": "^6.0.2",
    "dotenv": "^10.0.0",
    "graphql": "^15.5.1",
    "isomorphic-fetch": "^3.0.0",
    "jwt-decode": "^3.1.2",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "koa-combine-routers": "^4.0.2",
    "koa-session": "^6.2.0",
    "mongoose": "^5.12.7",
    "next": "^11.0.1",
    "raw-body": "^2.4.1",
    "react": "^17.0.2",
    "react-cookie": "^4.0.3",
    "react-dom": "^17.0.2",
    "regenerator-runtime": "^0.13.7",
    "store-js": "^2.0.4",
    "universal-cookie": "^4.0.4",
    "webpack": "^5.40.0"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.14.5",
    "@babel/preset-stage-3": "^7.8.3",
    "babel-jest": "^27.0.6",
    "jest": "^27.0.6",
    "localtunnel": "^2.0.1",
    "nodemon": "^2.0.7",
    "npmlog": "^5.0.0"
  },
  "jest": {
    "transform": {
      "^.+\\.js$": "./jest.transform.js"
    }
  }
}